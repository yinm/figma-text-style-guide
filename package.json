{
  "name": "figma-text-style-guide",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "sync-design-tokens": "cd design-tokens && pnpm i && pnpm run build",
    "dev:ui": "vite -c ./vite.config.ui.ts",
    "build": "pnpm build:plugin & pnpm build:ui",
    "build:plugin": "vite build -c ./vite.config.plugin.ts",
    "build:ui": "vite build -c ./vite.config.ui.ts",
    "watch": "pnpm build:plugin --watch & pnpm build:ui --watch",
    "test": "pnpm test:plugin & pnpm test:ui",
    "test:plugin": "vitest -c ./src/plugin/vitest.config.ts",
    "test:ui": "vitest -c ./src/ui/vitest.config.ts",
    "lint": "eslint 'src/'",
    "lint:fix": "eslint --fix 'src/'",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "typecheck": "tsc -p tsconfig.node.json && tsc -p tsconfig.app.json",
    "scaffdog": "scaffdog generate",
    "ladle": "ladle serve  --config ./src/ui/.ladle"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.96.0",
    "@ladle/react": "^5.0.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.5.0",
    "eslint-config-yinm": "^0.0.6",
    "eslint-plugin-react-refresh": "^0.4.7",
    "figma-api-stub": "^0.0.57",
    "jsdom": "^26.0.0",
    "postcss": "^8.4.39",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "scaffdog": "^4.0.0",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.2.2",
    "vite": "^6.0.0",
    "vite-plugin-singlefile": "^2.0.2",
    "vitest": "^2.0.0"
  },
  "packageManager": "pnpm@9.9.0"
}
